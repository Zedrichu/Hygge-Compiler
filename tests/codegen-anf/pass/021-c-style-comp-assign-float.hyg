// Test compute-assignment operators with assertions

// Float compute-assign operations
let mutable f = 10.0f;

f += 5.5f;
// We use less precise comparison for floats
let floatDiff = f - 15.5f;
assert(floatDiff < 0.001f && floatDiff > 0.0f-0.001f);

f -= 3.5f;
floatDiff = f - 12.0f;
assert(floatDiff < 0.001f && floatDiff > 0.0f-0.001f);

f *= 2.0f;
floatDiff = f - 24.0f;
assert(floatDiff < 0.001f && floatDiff > 0.0f-0.001f);

f /= 4.0f;
floatDiff = f - 6.0f;
assert(floatDiff < 0.001f && floatDiff > 0.0f-0.001f);

()